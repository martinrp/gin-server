<div class="row">
    <div class="col-md-12">
        <h1>{{title}}</h1>
    </div>

</div>

<div class="row">
    <div class="col-sm-12">
        <form action="updateScore" method="POST" class="form-horizontal" role="form">
            <input type="hidden" name="_csrf" id="csrf" value="{{_csrfToken}}">
            <div class="form-group">
                <legend>New game</legend>
                <div class="col-sm-12">
                    <label for="password">Select second player</label>
                    </br>
                    {{#select users name="user-select"}}{{/select}}
                    
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary">Submit Score</button>
                </div>
            </div>
        </form>
    </div>
</div>